<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.gesture.GestureOverlayView
        android:id="@+id/gestures_overlay"
        android:layout_width="500dp"
        android:layout_height="700dp"

        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/draw_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"></ImageView>
    </android.gesture.GestureOverlayView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_centerInParent="true">



    <Button
        android:id="@+id/next_page"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="35dp"

        android:text="Next"
        app:layout_constraintTop_toBottomOf="@+id/gestures_overlay"
        app:layout_constraintLeft_toRightOf="@+id/previous"


        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="234dp" />

    <Button
        android:id="@+id/previous"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="previous"
        app:layout_constraintTop_toBottomOf="@+id/gestures_overlay"

        tools:layout_editor_absoluteX="384dp"
        tools:layout_editor_absoluteY="234dp" />
        <Button
            android:id="@+id/finish"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="35dp"

            android:text="Finish"
            app:layout_constraintTop_toBottomOf="@+id/gestures_overlay"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="234dp" />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="0dp"
        android:layout_height="719dp"
        android:layout_margin="10dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/black"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/black"
            android:text="BLACK"
            android:textColor="@android:color/white"
            android:textSize="15dp"

            />

        <Button
            android:id="@+id/blue"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"

            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="BLUE"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/black"

            />

        <Button
            android:id="@+id/green"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="GREEN"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/Blue"

            />

        <Button
            android:id="@+id/purple"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_purple"
            android:elevation="0dp"
            android:text="Purple"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/green" />

        <Button
            android:id="@+id/red"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_red_light"
            android:elevation="0dp"
            android:text="red"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/purple" />

        <Button
            android:id="@+id/orange"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_orange_light"
            android:elevation="0dp"
            android:text="orange"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/red" />

        <Button
            android:id="@+id/gray"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/darker_gray"
            android:elevation="0dp"
            android:text="gray"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/orange" />

        <ImageButton
            android:id="@+id/erase_button"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@drawable/eraser" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>