<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.gesture.GestureOverlayView
        android:id="@+id/gestures_overlay"
        android:layout_width="500dp"
        android:layout_height="700dp"

        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/draw_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"></ImageView>
    </android.gesture.GestureOverlayView>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/black"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/black"
            android:text="BLACK"
            android:textColor="@android:color/white"
            android:textSize="15dp"

            />

        <Button
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"

            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="BLUE"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/black"

            />

        <Button
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="GREEN"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/Blue"

            />

        <Button
            android:id="@+id/purple"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_purple"
            android:elevation="0dp"
            android:text="Purple"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/green" />
        <Button
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_red_light"
            android:elevation="0dp"
            android:text="red"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/purple" />
        <Button
            android:id="@+id/orange"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/holo_orange_light"
            android:elevation="0dp"
            android:text="orange"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/red" />

        <Button
            android:id="@+id/gray"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/oval_button"
            android:backgroundTint="@android:color/darker_gray"
            android:elevation="0dp"
            android:text="gray"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/orange" />

        <ImageButton
            android:id="@+id/erase_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/eraser"
             />



    </LinearLayout>



</android.support.constraint.ConstraintLayout>